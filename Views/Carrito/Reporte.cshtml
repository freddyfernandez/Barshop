@model IEnumerable<Barshop.Models.Registro>

@{
    ViewBag.Title = "Reporte";
}
<link href="~/Content/reporte.css" type="text/css" rel="stylesheet" />
<link href="~/Content/tabla.css" type="text/css" rel="stylesheet" />

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

<style>
    ul li:nth-child(1) .fa::after, ul li:nth-child(2) .fa::after,
    ul li:nth-child(3) .fa::after, ul li:nth-child(4) .fa::after{
        background: #60aa97;
        width: 180px;
        left: 100px;
    }
    ul li:last-child .fa::after {
        background: #60aa97;
        width: 100px;
    }
</style>

<div class="progress">
    <ul id="progressbar">
        <li class="active">
            <img src=@Url.Content("~/img/search.png") alt=""><br>
            <i class="fa fa-check" style="background: #60aa97;"></i>
            <p>DETALLE</p>

        </li>
        <li>

            <img src=@Url.Content("~/img/add_to_car.png") alt=""><br>
            <i class="fa fa-check" style="background: #60aa97;"></i>
            <p>CARRITO</p>

        </li>
        <li>

            <img src=@Url.Content("~/img/details.png") alt=""><br>
            <i class="fa fa-refresh" style="        background: #60aa97;
"></i>
            <p>CONTACTO</p>

        </li>
        <li>

            <img src=@Url.Content("~/img/payment.png") alt=""><br>
            <i class="fa fa-times" style="background: #60aa97;"></i>
            <p>REGISTRO</p>

        </li>
        <li>

            <img src=@Url.Content("~/img/report.png") alt=""><br>
            <i class="fa fa-times" style="background: #60aa97;"></i>
            <p>REPORTE</p>

        </li>

    </ul>
</div>

<h2 style="text-align:center">Reporte</h2>


<div class="form-horizontal">
    @using (Html.BeginForm())
    {
        <div class="encabezado">
            <div class="izquierda">
                <div class="lado1">ID PEDIDO: @ViewBag.idpedido</div>
                <div class="lado1">NOMBRE: @ViewBag.nombre</div>

            </div>

            <div class="derecha">
                <div class="lado2">DIRECCION: @ViewBag.direccion_actual</div>
                <div class="lado2">FECHA: @ViewBag.fecha</div>

            </div>

        </div>
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idproducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreproducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.preciounidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.monto)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idproducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreproducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.preciounidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.monto)
                </td>

            </tr>
        }

    </table>
    <div>Monto Total:@ViewBag.monto</div>

</div>
<div>@Html.ActionLink("Generar Comprobante PDF", "Print")</div>
