@model IEnumerable<Barshop.Models.Registro>
@{
    ViewBag.Title = "Pago";
}
<link href="~/Content/tabla.css" type="text/css" rel="stylesheet" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

<style>
    ul li:nth-child(1) .fa::after, ul li:nth-child(2) .fa::after,
    ul li:nth-child(3) .fa::after, ul li:nth-child(4) .fa::after {
        background: #60aa97;
        width: 180px;
        left: 100px;
    }
    ul li:last-child .fa::after {
        width: 100px;
    }
</style>

<div class="progress">
    <ul id="progressbar">
        <li class="active">
            <img src=@Url.Content("~/img/search.png") alt=""><br>
            <i class="fa fa-check" style="background: #60aa97;"></i>
            <p>DETALLE</p>

        </li>
        <li>

            <img src=@Url.Content("~/img/add_to_car.png") alt=""><br>
            <i class="fa fa-check" style="background: #60aa97;"></i>
            <p>CARRITO</p>

        </li>
        <li>

            <img src=@Url.Content("~/img/details.png") alt=""><br>
            <i class="fa fa-refresh" style="background: #60aa97;"></i>
            <p>CONTACTO</p>

        </li>
        <li>

            <img src=@Url.Content("~/img/payment.png") alt=""><br>
            <i class="fa fa-times" style="background: #60aa97;"></i>
            <p>REGISTRO</p>

        </li>
        <li>

            <img src=@Url.Content("~/img/report.png") alt=""><br>
            <i class="fa fa-times"></i>
            <p>REPORTE</p>

        </li>

    </ul>
</div>

@Html.ActionLink("REGRESAR", "BuscarPersona");


<h3 style="text-align:center">Realizar la Transaccion</h3>
<div class="form-horizontal">

    @using (Html.BeginForm())
    {


        <div>Dni:</div>
        <div><input type="text" name="dni" value="@ViewBag.doc" readonly /></div>
        <div>Nombre y Apellidos:</div>
        <div><input type="text" name="nombre" value="@ViewBag.per" readonly /></div>
        <div>Direccion_actual:</div>
        <div><input type="text" name="direccion_actual" value="@ViewBag.direccion_actual" /></div>
        <div>Telefono:</div>
        <div><input type="text" name="telefono" value="@ViewBag.telefono" /></div>




        <div class="form-group">
            <input type="submit" value="Aceptar" />
        </div>

    }
</div>
@Html.Partial("_PartialComprar")
<p style="text-align:center;">Monto Total: @ViewBag.mt</p>



