<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <!--librerias-->
    <script src="https://kit.fontawesome.com/151986d4a1.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css1")


</head>
<body class="hidden">
   

        @if (ViewBag.contador == 0)
        {
            ViewBag.contador = '+';

        }

   
    <header>


        <nav id="nav" class="nav1">
            <div class="contenedor-nav">
                <div class="logo">
                    <img src=@Url.Content("~/img/logo.png") alt="">
                </div>
                <div class="enlaces" id="enlaces">
                    <a href="@Url.Action("Index", "Carrito")" id="enlace-inicio" class="btn-header">Inicio</a>

                    <a href="@Url.Action("Comprar", "Carrito")" id="enlace-contacto">Mi Carrito<span style="color: #8fca00;font-weight:500;">[@ViewBag.contador]</span></a>
                   


                    @Html.Partial("_LoginPartial")

                </div>


                <div class="icono" id="open">
                    <span>&#9776</span>
                </div>




            </div>

        </nav>
        <div class="textos">
            <h1></h1>
            <h2>Cibertec Desarrollo de Servicios Web I</h2>

        </div>

    </header>
    <div class="container body-content">
        @RenderBody()

    </div>
    <footer id="contacto">
        <div class="footer contenedor">
            <div class="marca-logo">
                <img src=@Url.Content("~/img/logo.png") alt="">

            </div>
            <div class="iconos">
                <i class="fab fa-youtube" aria-hidden="true"></i>
                <i class="fab fa-facebook-square" aria-hidden="true"></i>
                <i class="fab fa-github" aria-hidden="true"></i>
            </div>

            <h3>INTEGRANTES:</h3>

            <p>FREDDY FERNANDEZ CURI</p>

            <p>ROLANDO COAQUIRA HIHUANA</p>

            <p>DIEGO PRADO ARENAS</p>



        </div>


    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/app")
    <script src="~/Scripts/filtro.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
