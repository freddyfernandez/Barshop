            <a class="amenu" href="@Url.Action("Paginacion", "Pedido")"><i class="fas fa-question-circle"></i><span>REPORTE PEDIDO</span></a>
            <a class="amenu" href="#"><i class="fas fa-envelope"></i><span>ALMACEN</span></a>

        </div>

        @RenderBody()

    </div>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
