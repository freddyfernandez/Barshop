<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <link href="~/Content/menu.css" type="text/css" rel="stylesheet" />
   
    @Styles.Render("~/Content/css2")
   
</head>
<body>
    <header>
        <nav id="nav" class="nav1">
            <div class="contenedor-nav">
                <div class="logo">
                    <img src=@Url.Content("~/img/logo.png") alt="">
                </div>
                <div class="enlaces" id="enlaces">
                    <a href="#" id="enlace-inicio" class="btn-header">@Html.ActionLink("Volver a la tienda", "Index", "Carrito")</a>
                    <a href="#" id="enlace-inicio" class="btn-header">@Html.ActionLink("Cerrar Sesion", "Logueo", "Admin")</a>
                </div>

                <div class="icono" id="open">
                    <span>&#9776</span>
                </div>




            </div>

        </nav>
    </header>



    <div class="container body-content">



        <div class="sidebar">
            <header>PANEL</header>
            <a href="#" class="active"><i class="fas fa-qrcode"></i><span>EMPRESA</span></a>
            <a class="amenu" href="@Url.Action("Index", "Trabajador")"><i class="fas fa-link"></i><span>TRABAJADOR</span></a>
            <a class="amenu" href="@Url.Action("Paginacion", "Producto")"><i class="fas fa-calendar"></i><span>PRODUCTO</span></a>
