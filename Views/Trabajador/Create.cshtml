            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
        <p>@ViewBag.mensaje</p>
    </div>
}
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}